<h1>Blog Posts</h1>

{%- if collections.posts.length > 0 -%}
<ul class="post-list">
    {%- for post in collections.posts | reverse -%}
    <li class="post-item">
        <div class="post-date">{{ post.date | dateDisplay }}</div>
        <h2 class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p class="post-excerpt">{{ post.data.description or "No description available." }}</p>
        <div class="post-meta">
            {%- if post.data.tags -%}
            <div class="post-tags">
                {%- for tag in post.data.tags -%}
                {%- if tag !== "posts" -%}
                <span class="tag">{{ tag }}</span>
                {%- endif -%}
                {%- endfor -%}
            </div>
            {%- endif -%}
            <a href="{{ post.url }}" class="read-more">Read more â†’</a>
        </div>
    </li>
    {%- endfor -%}
</ul>
{%- else -%}
<div class="no-posts">
    <h2>No posts yet</h2>
    <p>Check back later for new content!</p>
</div>
{%- endif -%}

